cardBackground = "../images/cards_front_medium.jpg"
cardHeight = 108px;
cardWidth = 78px

bgPosX(x)
  background-position-x: x * -1

bgPosY(y)
  background-position-y: y * -1

.card
  height: cardHeight;
  width: cardWidth;
  background-image: url(cardBackground);
  background-position: 0 cardHeight* -4;
  background-repeat: no-repeat;
  position: absolute;
  z-index: 0;

@media (min-width: 500px)
  .card
    background-image: url("../images/cards_front_small.jpg")

.card .more
  position absolute
  height 50px
  width 50px
  padding-top 13px
  border-radius 24px
  background: rgba(0, 0, 0, 0.8)
  color #fff
  top: 30px;
  left: 15px;
  font-size: 18px;
  text-align center

.card
  &.hide
    width 25%

/*
1. Herz
2. Karo
3. Pik
4. Kreuz
 */
cardHoverEffect()
  &:hover
    z-index: 100;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

.card.symbol-1
  bgPosY(cardHeight* 0)
  cardHoverEffect()

.card.symbol-2
  bgPosY(cardHeight* 1)
  cardHoverEffect()

.card.symbol-3
  bgPosY(cardHeight* 2)
  cardHoverEffect()

.card.symbol-4
  bgPosY(cardHeight* 3)
  cardHoverEffect()

.card.value-6
  bgPosX(cardWidth* 0)

.card.value-7
  bgPosX(cardWidth* 1)

.card.value-8
  bgPosX(cardWidth* 2)

.card.value-9
  bgPosX(cardWidth* 3)

.card.value-10
  bgPosX(cardWidth* 4)

.card.value-11
  bgPosX(cardWidth* 5)

.card.value-12
  bgPosX(cardWidth* 6)

.card.value-13
  bgPosX(cardWidth* 7)

